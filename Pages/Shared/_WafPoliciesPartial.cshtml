@model List<AzureFirewallManagerTools.Models.WafPolicyDetails>

@if (Model != null && Model.Any())
{
    <h2 class="mt-4">掃描結果 (@Model.Count 個策略):</h2>

    <!-- 遍歷並顯示每個 WAF 策略的詳細資訊。
         結果會根據訂閱名稱、資源群組名稱和策略名稱進行排序，以便於查看。 -->
    @foreach (var policy in Model.OrderBy(p => p.SubscriptionName).ThenBy(p => p.ResourceGroupName).ThenBy(p => p.Name))
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 me-auto">@policy.Name</h5>

                    <button class="btn btn-sm btn-outline-light ms-3 edit-notes-btn"
                            data-entity-type="WafPolicy"
                            data-entity-id="@policy.Name"
                            data-current-notes="@policy.Notes"
                            data-target-notes-id="policy-notes-content-@policy.Name.Replace(" ", "-")"
                            data-target-container-id="policy-notes-@policy.Name.Replace(" ", "-")">
                        編輯策略備註
                    </button>
                </div>

                <div id="policy-notes-@policy.Name.Replace(" ", "-")" class="alert alert-info mt-2 mb-0" role="alert" style="@(string.IsNullOrEmpty(policy.Notes) ? "display:none;" : "")">
                    <strong>策略備註:</strong> <span id="policy-notes-content-@policy.Name.Replace(" ", "-")">@policy.Notes</span>
                </div>
            </div>
            <div class="card-body">
                <p><strong>訂閱:</strong> @policy.SubscriptionName (@policy.SubscriptionId)</p>
                <p><strong>資源群組:</strong> @policy.ResourceGroupName</p>

                <hr />

                <button class="btn btn-info btn-sm mt-2" type="button" data-bs-toggle="collapse" data-bs-target="#managedRules_@policy.Name.Replace(" ", "")" aria-expanded="false" aria-controls="managedRules_@policy.Name.Replace(" ", "")">
                    託管規則 (@policy.ManagedRules.Count)
                </button>
                <div class="collapse mt-3" id="managedRules_@policy.Name.Replace(" ", "")">
                    <h6>託管規則集:</h6>
                    @if (policy.ManagedRules.Any())
                    {
                        <div class="accordion" id="accordionManagedRules_@policy.Name.Replace(" ", "")">
                            @foreach (var ruleSet in policy.ManagedRules)
                            {
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="headingManagedRuleSet_@ruleSet.RuleSetType.Replace(" ", "")_@ruleSet.RuleSetVersion.Replace(".", "")">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseManagedRuleSet_@ruleSet.RuleSetType.Replace(" ", "")_@ruleSet.RuleSetVersion.Replace(".", "")" aria-expanded="false" aria-controls="collapseManagedRuleSet_@ruleSet.RuleSetType.Replace(" ", "")_@ruleSet.RuleSetVersion.Replace(".", "")">
                                            @ruleSet.RuleSetType  @ruleSet.RuleSetVersion
                                        </button>
                                    </h2>
                                    <div id="collapseManagedRuleSet_@ruleSet.RuleSetType.Replace(" ", "")_@ruleSet.RuleSetVersion.Replace(".", "")" class="accordion-collapse collapse" aria-labelledby="headingManagedRuleSet_@ruleSet.RuleSetType.Replace(" ", "")_@ruleSet.RuleSetVersion.Replace(".", "")" data-bs-parent="#accordionManagedRules_@policy.Name.Replace(" ", "")">
                                        <div class="accordion-body">
                                            @if (ruleSet.RuleGroupOverrides.Any())
                                            {
                                                <p>規則群組覆寫:</p>
                                                <ul class="list-group list-group-flush">
                                                    @foreach (var groupOverride in ruleSet.RuleGroupOverrides)
                                                    {
                                                        <li class="list-group-item bg-light">
                                                            <strong>@groupOverride.RuleGroupName</strong>
                                                            @if (groupOverride.DisabledRules.Any())
                                                            {
                                                                <span class="badge bg-warning text-dark ms-2">已禁用 @groupOverride.DisabledRules.Count 個規則</span>
                                                            }
                                                            @if (groupOverride.Rules.Any())
                                                            {
                                                                <p class="mb-1 mt-2">詳細規則覆寫:</p>
                                                                <ul class="list-unstyled">
                                                                    @foreach (var ruleOverride in groupOverride.Rules)
                                                                    {
                                                                        <li class="mb-2">
                                                                            @* 為每個規則覆寫列表項添加一些下邊距 *@
                                                                            <div class="d-flex justify-content-between align-items-center">
                                                                                <span class="fw-bold me-auto">- 規則 ID: @ruleOverride.RuleId</span> @* 將規則ID靠左，並加粗 *@
                                                                                狀態: <span class="badge @(ruleOverride.State == "Disabled" ? "bg-danger" : "bg-success") ms-1">@ruleOverride.State</span>

                                                                                @if (ruleOverride.ExclustionCount > 0)
                                                                                {
                                                                                    <span class="badge bg-info ms-2">排除項: @ruleOverride.ExclustionCount</span>
                                                                                    <button class="btn btn-link btn-sm" type="button" data-bs-toggle="modal" data-bs-target="#exclusionModal_@policy.Name.Replace(" ", "-")_@ruleOverride.RuleId.Replace(" ", "-")">
                                                                                        查看排除項
                                                                                    </button>
                                                                                }

                                                                                @* 備註狀態圖示 (Badge) - 永遠渲染，通過 style="display:none;" 控制可見性 *@
                                                                                <span class="badge bg-info ms-2"
                                                                                      id="managed-rule-notes-badge-@policy.Name.Replace(" ", "-")_@ruleSet.RuleSetType.Replace(" ", "-")_@ruleSet.RuleSetVersion.Replace(".", "-")_@groupOverride.RuleGroupName.Replace(" ", "-")_@ruleOverride.RuleId.Replace(" ", "-")"
                                                                                      style="@(string.IsNullOrEmpty(ruleOverride.Notes) ? "display:none;" : "")">備註</span>

                                                                                <button class="btn btn-link btn-sm edit-notes-btn"
                                                                                        data-entity-type="ManagedRuleOverride"
                                                                                        data-policy-name="@policy.Name"
                                                                                        data-ruleset-type="@ruleSet.RuleSetType"
                                                                                        data-ruleset-version="@ruleSet.RuleSetVersion"
                                                                                        data-rule-group-name="@groupOverride.RuleGroupName"
                                                                                        data-rule-id="@ruleOverride.RuleId"
                                                                                        data-current-notes="@ruleOverride.Notes"
                                                                                        data-target-notes-id="managed-rule-notes-content-@policy.Name.Replace(" ", "-")_@ruleSet.RuleSetType.Replace(" ", "-")_@ruleSet.RuleSetVersion.Replace(".", "-")_@groupOverride.RuleGroupName.Replace(" ", "-")_@ruleOverride.RuleId.Replace(" ", "-")"
                                                                                        data-target-container-id="managed-rule-notes-container-@policy.Name.Replace(" ", "-")_@ruleSet.RuleSetType.Replace(" ", "-")_@ruleSet.RuleSetVersion.Replace(".", "-")_@groupOverride.RuleGroupName.Replace(" ", "-")_@ruleOverride.RuleId.Replace(" ", "-")"
                                                                                        data-target-badge-id="managed-rule-notes-badge-@policy.Name.Replace(" ", "-")_@ruleSet.RuleSetType.Replace(" ", "-")_@ruleSet.RuleSetVersion.Replace(".", "-")_@groupOverride.RuleGroupName.Replace(" ", "-")_@ruleOverride.RuleId.Replace(" ", "-")">
                                                                                    編輯
                                                                                </button>
                                                                            </div>

                                                                            @* 備註內容區塊 - 永遠渲染，通過 style="display:none;" 控制可見性 *@
                                                                            <div id="managed-rule-notes-container-@policy.Name.Replace(" ", "-")_@ruleSet.RuleSetType.Replace(" ", "-")_@ruleSet.RuleSetVersion.Replace(".", "-")_@groupOverride.RuleGroupName.Replace(" ", "-")_@ruleOverride.RuleId.Replace(" ", "-")"
                                                                                 class="alert alert-secondary py-1 px-2 mt-1 mb-0 ms-4" role="alert"
                                                                                 style="@(string.IsNullOrEmpty(ruleOverride.Notes) ? "display:none;" : "")">
                                                                                <small class="text-dark">備註: <span id="managed-rule-notes-content-@policy.Name.Replace(" ", "-")_@ruleSet.RuleSetType.Replace(" ", "-")_@ruleSet.RuleSetVersion.Replace(".", "-")_@groupOverride.RuleGroupName.Replace(" ", "-")_@ruleOverride.RuleId.Replace(" ", "-")">@ruleOverride.Notes</span></small>
                                                                            </div>
                                                                        </li>
                                                                    }
                                                                </ul>
                                                            }
                                                        </li>
                                                    }
                                                </ul>
                                            }
                                            else
                                            {
                                                <p>無規則群組覆寫。</p>
                                            }

                                            @if (ruleSet.Exclusions.Any())
                                            {
                                                <h6 class="mt-3">規則集層級排除項:</h6>
                                                <ul class="list-unstyled ms-3">
                                                    @foreach (var exclusion in ruleSet.Exclusions)
                                                    {
                                                        <li class="mb-2">
                                                            <div class="d-flex justify-content-between align-items-center">
                                                                <span class="me-auto">
                                                                    變數: <span class="fw-bold">@exclusion.MatchVariable</span>,
                                                                    操作符: <span class="fw-bold">@exclusion.SelectorMatchOperator</span>,
                                                                    選擇器: <span class="fw-bold">@exclusion.Selector</span>
                                                                </span>
                                                                <span class="badge bg-info ms-2"
                                                                      id="ruleset-exclusion-notes-badge-@policy.Name.Replace(" ", "-")_@ruleSet.RuleSetType.Replace(" ", "-")_@ruleSet.RuleSetVersion.Replace(".", "-")_@exclusion.MatchVariable.Replace(" ", "-")_@exclusion.SelectorMatchOperator.Replace(" ", "-")_@exclusion.Selector.Replace(" ", "-")"
                                                                      style="@(string.IsNullOrEmpty(exclusion.Notes) ? "display:none;" : "")">備註</span>

                                                                <button class="btn btn-link btn-sm ms-2 edit-notes-btn" 
                                                                        data-entity-type="ManagedRuleSetExclusion"
                                                                        data-policy-name="@policy.Name"
                                                                        data-ruleset-type="@ruleSet.RuleSetType"
                                                                        data-ruleset-version="@ruleSet.RuleSetVersion"
                                                                        data-match-variable="@exclusion.MatchVariable"
                                                                        data-selector-match-operator="@exclusion.SelectorMatchOperator"
                                                                        data-selector="@exclusion.Selector"
                                                                        data-current-notes="@exclusion.Notes"
                                                                        data-target-notes-id="ruleset-exclusion-notes-content-@policy.Name.Replace(" ", "-")_@ruleSet.RuleSetType.Replace(" ", "-")_@ruleSet.RuleSetVersion.Replace(".", "-")_@exclusion.MatchVariable.Replace(" ", "-")_@exclusion.SelectorMatchOperator.Replace(" ", "-")_@exclusion.Selector.Replace(" ", "-")"
                                                                        data-target-container-id="ruleset-exclusion-notes-container-@policy.Name.Replace(" ", "-")_@ruleSet.RuleSetType.Replace(" ", "-")_@ruleSet.RuleSetVersion.Replace(".", "-")_@exclusion.MatchVariable.Replace(" ", "-")_@exclusion.SelectorMatchOperator.Replace(" ", "-")_@exclusion.Selector.Replace(" ", "-")"
                                                                        data-target-badge-id="ruleset-exclusion-notes-badge-@policy.Name.Replace(" ", "-")_@ruleSet.RuleSetType.Replace(" ", "-")_@ruleSet.RuleSetVersion.Replace(".", "-")_@exclusion.MatchVariable.Replace(" ", "-")_@exclusion.SelectorMatchOperator.Replace(" ", "-")_@exclusion.Selector.Replace(" ", "-")">
                                                                    編輯
                                                                </button>
                                                            </div>
                                                            <div id="ruleset-exclusion-notes-container-@policy.Name.Replace(" ", "-")_@ruleSet.RuleSetType.Replace(" ", "-")_@ruleSet.RuleSetVersion.Replace(".", "-")_@exclusion.MatchVariable.Replace(" ", "-")_@exclusion.SelectorMatchOperator.Replace(" ", "-")_@exclusion.Selector.Replace(" ", "-")"
                                                                 class="alert alert-secondary py-1 px-2 mt-1 mb-0 ms-4" role="alert"
                                                                 style="@(string.IsNullOrEmpty(exclusion.Notes) ? "display:none;" : "")">
                                                                <small class="text-dark">備註: <span id="ruleset-exclusion-notes-content-@policy.Name.Replace(" ", "-")_@ruleSet.RuleSetType.Replace(" ", "-")_@ruleSet.RuleSetVersion.Replace(".", "-")_@exclusion.MatchVariable.Replace(" ", "-")_@exclusion.SelectorMatchOperator.Replace(" ", "-")_@exclusion.Selector.Replace(" ", "-")">@exclusion.Notes</span></small>
                                                            </div>
                                                            <hr class="mt-2 mb-2" />
                                                        </li>
                                                    }
                                                </ul>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p>無託管規則。</p>
                    }
                </div>

                <hr />

                <button class="btn btn-info btn-sm mt-2" type="button" data-bs-toggle="collapse" data-bs-target="#customRules_@policy.Name.Replace(" ", "")" aria-expanded="false" aria-controls="customRules_@policy.Name.Replace(" ", "")">
                    自訂規則 (@policy.CustomRules.Count)
                </button>
                <div class="collapse mt-3" id="customRules_@policy.Name.Replace(" ", "")">
                    <h6>自訂規則:</h6>
                    @if (policy.CustomRules.Any())
                    {
                        <div class="accordion" id="accordionCustomRules_@policy.Name.Replace(" ", "")">
                            @foreach (var customRule in policy.CustomRules)
                            {
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="heading_@customRule.Name.Replace(" ", "")">
                                        <button class="accordion-button collapsed" type="button"
                                                data-bs-toggle="collapse"
                                                data-bs-target="#collapse_@customRule.Name.Replace(" ", "-")"
                                                aria-expanded="false"
                                                aria-controls="collapse_@customRule.Name.Replace(" ", "-")">

                                            <span class="me-auto">
                                                @* 使用 me-auto 將名稱推到最左邊 *@
                                                @customRule.Name
                                                <span class="badge @(customRule.Action == "Block" ? "bg-danger" : "bg-success") ms-2">@customRule.Action</span>
                                                <small class="text-muted ms-3">優先順序: @customRule.Priority</small>
                                            </span>

                                            @* **這裡只放備註指示器 (例如一個小徽章或圖示)** *@
                                            @if (!string.IsNullOrEmpty(customRule.Notes))
                                            {
                                                <span class="badge bg-info ms-2" id="custom-rule-header-badge-@policy.Name.Replace(" ", "-")_@customRule.Name.Replace(" ", "-")">備註</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info ms-2" id="custom-rule-header-badge-@policy.Name.Replace(" ", "-")_@customRule.Name.Replace(" ", "-")" style="display:none;">備註</span>
                                            }

                                            @* 將編輯按鈕放在這裡可能仍會影響排版，考慮是否移到 accordion-body 內 *@
                                            @* 如果放在這裡，可以考慮使用一個很小的圖示按鈕 *@
                                            @* <button class="btn btn-sm btn-outline-secondary ms-2 edit-notes-btn" ... >編輯</button> *@
                                        </button>
                                    </h2>
                                    <div id="collapse_@customRule.Name.Replace(" ", "")" class="accordion-collapse collapse" aria-labelledby="heading_@customRule.Name.Replace(" ", "")" data-bs-parent="#accordionCustomRules_@policy.Name.Replace(" ", "")">
                                        <div class="accordion-body">
                                            <p>類型: @customRule.RuleType</p>

                                            @* **將備註內容區塊移到 accordion-body 內部** *@
                                            <div id="custom-rule-notes-container-@policy.Name.Replace(" ", "-")_@customRule.Name.Replace(" ", "-")"
                                                 class="alert alert-info py-1 px-2 mt-2 mb-3" role="alert"
                                                 style="@(string.IsNullOrEmpty(customRule.Notes) ? "display:none;" : "")">
                                                <strong>備註:</strong> <span id="custom-rule-notes-content-@policy.Name.Replace(" ", "-")_@customRule.Name.Replace(" ", "-")">@customRule.Notes</span>
                                                <button class="btn btn-link btn-sm float-end edit-notes-btn"
                                                        data-entity-type="CustomRule"
                                                        data-entity-id="@(policy.Name)_@(customRule.Name)"
                                                        data-current-notes="@customRule.Notes"
                                                        data-target-notes-id="custom-rule-notes-content-@policy.Name.Replace(" ", "-")_@customRule.Name.Replace(" ", "-")"
                                                        data-target-container-id="custom-rule-notes-container-@policy.Name.Replace(" ", "-")_@customRule.Name.Replace(" ", "-")"
                                                        data-target-badge-id="custom-rule-header-badge-@policy.Name.Replace(" ", "-")_@customRule.Name.Replace(" ", "-")">
                                                    編輯
                                                </button>
                                            </div>
                                            <p class="mt-3">匹配條件:</p>
                                            <ul class="list-unstyled">
                                                @foreach (var mc in customRule.MatchConditions)
                                                {
                                                    <li>
                                                        <p>變數: @mc.MatchVariable, 操作符: @mc.Operator</p>
                                                        @if (!string.IsNullOrEmpty(mc.Selector))
                                                        {
                                                            <p>選擇器: @mc.Selector</p>
                                                        }
                                                        @if (mc.Transforms.Any())
                                                        {
                                                            <p>轉換: @string.Join(", ", mc.Transforms)</p>
                                                        }

                                                        <p class="mt-2 mb-1">匹配值 (含備註):</p>
                                                        <ul class="list-unstyled ms-3">
                                                            @foreach (var mv in mc.MatchValues) // 現在是 MatchValueWithNotes 類型
                                                            {
                                                                <li class="mb-2">
                                                                    @* 為每個列表項添加一些下邊距，讓它們之間有空間 *@
                                                                    <div class="d-flex justify-content-between align-items-center">
                                                                        <span class="fw-bold me-auto">@mv.Value</span> @* 讓值靠左，並加粗以便區分 *@

                                                                        @* 備註狀態圖示 (Badge) - 永遠渲染，通過 style="display:none;" 控制可見性 *@
                                                                        <span class="badge bg-info ms-2 me-2"
                                                                              id="match-value-badge-@policy.Name.Replace(" ", "-")_@customRule.Name.Replace(" ", "-")_@(customRule.MatchConditions.IndexOf(mc))_@mv.Value.Replace(".", "-").Replace(":", "-")"
                                                                              style="@(string.IsNullOrEmpty(mv.Notes) ? "display:none;" : "")">備註</span>

                                                                        <button class="btn btn-link btn-sm edit-notes-btn"
                                                                                data-entity-type="MatchValue"
                                                                                data-policy-name="@policy.Name"
                                                                                data-custom-rule-name="@customRule.Name"
                                                                                data-match-condition-index="@customRule.MatchConditions.IndexOf(mc)"
                                                                                data-match-value="@mv.Value"
                                                                                data-current-notes="@mv.Notes" @* 這裡的 @mv.Notes 僅用於按鈕初始化，不是實際顯示的內容 *@
                                                                                data-target-notes-id="match-value-notes-content-@policy.Name.Replace(" ", "-")_@customRule.Name.Replace(" ", "-")_@(customRule.MatchConditions.IndexOf(mc))_@mv.Value.Replace(".", "-").Replace(":", "-")"
                                                                                data-target-container-id="match-value-notes-container-@policy.Name.Replace(" ", "-")_@customRule.Name.Replace(" ", "-")_@(customRule.MatchConditions.IndexOf(mc))_@mv.Value.Replace(".", "-").Replace(":", "-")"
                                                                                data-target-badge-id="match-value-badge-@policy.Name.Replace(" ", "-")_@customRule.Name.Replace(" ", "-")_@(customRule.MatchConditions.IndexOf(mc))_@mv.Value.Replace(".", "-").Replace(":", "-")">
                                                                            編輯
                                                                        </button>
                                                                    </div>

                                                                    @* 備註內容區塊 - 永遠渲染，通過 style="display:none;" 控制可見性 *@
                                                                    <div id="match-value-notes-container-@policy.Name.Replace(" ", "-")_@customRule.Name.Replace(" ", "-")_@(customRule.MatchConditions.IndexOf(mc))_@mv.Value.Replace(".", "-").Replace(":", "-")"
                                                                         class="alert alert-secondary py-1 px-2 mt-1 mb-0 ms-4" role="alert"
                                                                         style="@(string.IsNullOrEmpty(mv.Notes) ? "display:none;" : "")">
                                                                        <small class="text-dark">備註: <span id="match-value-notes-content-@policy.Name.Replace(" ", "-")_@customRule.Name.Replace(" ", "-")_@(customRule.MatchConditions.IndexOf(mc))_@mv.Value.Replace(".", "-").Replace(":", "-")">@mv.Notes</span></small>
                                                                    </div>
                                                                </li>
                                                            }
                                                        </ul>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p>無自訂規則。</p>
                    }
                </div>
            </div>
        </div>

        @foreach (var ruleSet in policy.ManagedRules)
        {
            @foreach (var groupOverride in ruleSet.RuleGroupOverrides)
            {
                @foreach (var ruleOverride in groupOverride.Rules)
                {
                    @if (ruleOverride.Exclusions.Any())
                    {
                        <div class="modal fade" id="exclusionModal_@policy.Name.Replace(" ", "")_@ruleOverride.RuleId" tabindex="-1" aria-labelledby="exclusionModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exclusionModalLabel">規則 @ruleOverride.RuleId 的排除項</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        @if (ruleOverride.Exclusions.Any())
                                        {
                                            @foreach (var exclusion in ruleOverride.Exclusions)
                                            {
                                                <p><strong>變數:</strong> @exclusion.MatchVariable</p>
                                                <p><strong>操作符:</strong> @exclusion.SelectorMatchOperator</p>
                                                <p><strong>選擇器:</strong> @exclusion.Selector</p>
                                                <hr />
                                            }
                                        }
                                        else
                                        {
                                            <p>無排除項。</p>
                                        }
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        }
    }
} else
{
    <div class="alert alert-info mt-3" role="alert">
        沒有找到任何 Azure WAF 策略。請確保您的權限設定正確，並且該租用戶/訂閱/資源群組中存在 Front Door WAF 策略。
    </div>
}